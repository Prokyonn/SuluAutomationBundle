<?xml version="1.0" ?>
<form xmlns="http://schemas.sulu.io/template/template"
      xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
      xsi:schemaLocation="http://schemas.sulu.io/template/template http://schemas.sulu.io/template/form-1.0.xsd"
>
    <key>task_details</key>

    <properties>
        <property name="handlerClass" type="single_select" mandatory="true">
            <meta>
                <title lang="en">Task Name</title>
                <title lang="de">Taskname</title>
            </meta>

            <params>
                <param name="default_value" value=""/>
                <param name="values" type="expression" value="service('sulu_automation.handler_provider').getHandlerValues()"/>
            </params>
        </property>

        <property name="time" type="time" colspan="6">
            <meta>
                <title lang="en">Time</title>
                <title lang="de">Zeit</title>
            </meta>
        </property>

        <property name="date" type="date" colspan="6">
            <meta>
                <title lang="en">Date</title>
                <title lang="de">Datum</title>
            </meta>

            <params>
                <param name="display_options" type="collection">
                    <param name="format" value="yyyy-mm-dd"/>
                </param>
            </params>
        </property>
    </properties>
</form>
